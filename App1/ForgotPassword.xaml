<Page x:Class="App1.ForgotPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:App1"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1360" 
      Title="ForgotPassword">

    <Grid >
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
        </Grid.Background>

        <Grid Margin="464,144" Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="9" Color="#FFB99D9D"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="What is your Pet's name?" Margin="66,0,34,30" FontSize="26.667" VerticalAlignment="Bottom"></Label>
            <TextBox Grid.Row="1" Height="50" Width="300"  VerticalAlignment="Top" BorderThickness="1"  FontSize="16"/>
            <Button Content="Submit" Name="forgot_pass_submit" Width="200" Height="50" VerticalAlignment="Center" Grid.Row="1"/>

        </Grid>
    </Grid>
</Page>
